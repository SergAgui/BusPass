@model IEnumerable<OrderModel>
@{
    ViewData["Title"] = "Previous Orders";
}
<body>
    <h1>Past Orders</h1>
    <div class="container">
        <div class="row">
            <div class="col">Fare</div>
            <div class="col">Date</div>
            <div class="col">Amount Paid</div>
            @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
            {
                <div class="col">Username</div>
            }
            <div class="col">Receipt</div>
        </div>
        <hr />
        <br />
        @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
        {
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.Fare.Fare.ToString())
                    </div>
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.PurchaseDate.Date)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.Fare.Price)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.User.UserName)
                    </div>
                    <div class="col">
                        <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a> | 
                        <a asp-action="Refund" asp-route-id="@item.Id">Refund</a>
                    </div>
                </div>
            }
        }
        else
        {
            @foreach (var item in Model.Where(om => om.User.UserName == User.Identity.Name))
            {
                <div class="row">
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.Fare.Fare.ToString())
                    </div>
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.PurchaseDate.Date)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(fromModel => item.Fare.Price)
                    </div>
                    <div class="col">
                        <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>
                    </div>
                </div>
            }
        }
    </div>
</body>