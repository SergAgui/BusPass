@using Microsoft.AspNetCore.Identity
@model IEnumerable<OrderModel>
@inject UserManager<IdentityUser> userManager
@inject BusPass.Models.IRepository repo
@{
    ViewData["Title"] = "Previous Orders";
}
<body>
    <h1>Past Orders</h1>
    <div class="container">
        <div class="row">
            <div class="col">Fare</div>
            <div class="col">Date</div>
            <div class="col">Amount Paid</div>
            @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
            {
                <div class="col">Username</div>
            }
            <div class="col">Receipt</div>
        </div>
        <hr />
        <br />
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col">
                    @Html.DisplayFor(fareName => repo.FindFareId(item.FareId).Fare)
                </div>
                <div class="col">
                    @Html.DisplayFor(fromModel => item.PurchaseDate.Date)
                </div>
                <div class="col">
                    @Html.DisplayFor(farePrice => repo.FindFareId(item.FareId).Price)
                </div>
                @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                {
                    <div class="col"> <!-- TODO: Username for each order doesn't show -->
                        @Html.DisplayFor(userName => item.UserId)
                    </div>
                }
            <div class="col">
                <a asp-action="Receipt" asp-route-id="@item.Id">Receipt</a>
                @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                {
                    <a asp-action="Refund" asp-route-id="@item.Id"> | Refund</a>
                }
            </div>
            </div>
        }
    </div>
</body>