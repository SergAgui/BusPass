@model  IEnumerable<ServiceAlertModel>
@{
    ViewData["Title"] = "Edit Service Alerts";
}
<body>
    <h1>Edit Service Alerts</h1>
    <div class="container">
        <div class="row">
            <div class="col">Service Alert Message</div>
            <div class="col"></div>
        </div>
        @foreach (var serviceAlert in Model)
        {
            <div class="row">
                <div class="col">
                    @Html.DisplayFor(fromModel => serviceAlert.Message)
                </div>
                <div class="col">
                    <a asp-action="Edit" asp-route-id="@serviceAlert.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@serviceAlert.Id">Delete</a>
                </div>
            </div>
        }
        <a asp-action="Add">Add New Alert</a>
    </div>
</body>