@model FareModel

@{
    ViewData["Title"] = "Add New Fare";
}

<body>
    <h1>Create A New Fare:</h1>
    @using (Html.BeginForm("Add", "Fare", FormMethod.Post))
    {
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="form-group">
            <label asp-for="Id"></label>
            <div>@ViewData[nameof(FareModel.Id)]</div>
            <span asp-validation-for="Id" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Fare"></label>
            <input asp-for="Fare" class="form-control" />
            <span asp-validation-for="Fare" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="alert-danger"></span>
        </div>
        <br />
        <br />
        <div class="form-group">
            <input type="submit" value="Save Fare" />
        </div>
    }
</body>