@model FareModel

@{
    ViewData["Title"] = "Edit Fare";
}

<body>
    <h1>Edit Fare:</h1>
    @using (Html.BeginForm("Edit", "Fare", FormMethod.Post))
    {
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="form-group">
            <div>@Html.DisplayFor(model => model.Id)</div>
            <span asp-validation-for="Id" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label>Fare Title</label>
            <input asp-for="Fare" class="form-control" />
            <span asp-validation-for="Fare" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="alert-danger"></span>
        </div>
        <br />
        <br />
        <div class="form-group">
            <input type="submit" value="Save Fare" />
        </div>
    }
</body>