@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="container">
        <div class="row">
            <div class="col-xl-1">
                <h1 class="display-4">Welcome</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <h2>Fares & Passes</h2>
                <p>Choose an option that fits your needs - from a single day ride to 31 day service pass.</p>
                <a asp-area="" asp-controller="Home" asp-action="Fares" 
                   class="btn btn-primary btn-lg">Find Fare Information</a>
            </div>
            <div class="col">
                <h2>Service Alerts</h2>
                <p>Check for detours, delays, and closures.</p>
                <a asp-area="" asp-controller="Home" asp-action="Alerts">Find Service Alerts</a>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <div class="col align-items-end align-self-end">
                <h1>Buy your passes online now!</h1>
                <a asp-area="" asp-controller="Home" asp-action="Purchase">Buy online</a>
            </div>
        </div>
    </div>
</div>
