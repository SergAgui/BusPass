@model IdentityRole
@{
    ViewData["Title"] = "Create New Role";
}

<body>
    <h1>Create a new Role</h1>
    <div class="row">
        <div class="col">
            @using (Html.BeginForm("Create", "Role", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="alert-danger"></span>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <input type="submit" value="Save Role" />
                    <a asp-action="Index">Back to list</a>
                </div>
            }
        </div>
    </div>
</body>